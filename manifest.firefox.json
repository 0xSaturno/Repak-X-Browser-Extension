{
    "manifest_version": 3,
    "name": "Repak X - Nexus Mods Integration",
    "version": "1.0.0",
    "description": "Adds a 'To Repak X' button on Nexus Mods Marvel Rivals mod pages to quickly send mods to Repak X",
    "author": "Saturn",
    "browser_specific_settings": {
        "gecko": {
            "id": "repakx@saturn.com",
            "strict_min_version": "109.0"
        }
    },
    "permissions": [
        "downloads",
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://www.nexusmods.com/*"
    ],
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png"
        },
        "default_title": "Repak X Integration"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.nexusmods.com/marvelrivals/*",
                "https://nexusmods.com/marvelrivals/*"
            ],
            "js": [
                "content/content.js"
            ],
            "css": [
                "content/content.css",
                "content/alt-button.css"
            ],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "scripts": [
            "background/background.js"
        ],
        "type": "module"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/*",
                "redirect.html"
            ],
            "matches": [
                "https://www.nexusmods.com/*"
            ]
        }
    ]
}
